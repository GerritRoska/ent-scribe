{
  "manifest_version": 3,
  "name": "ENT Scribe",
  "version": "1.0.0",
  "description": "Ambient AI medical scribe for ENT â€” powered by Whisper + GPT-4o",
  "permissions": [
    "sidePanel",
    "activeTab"
  ],
  "host_permissions": [
    "https://ent-scribe.vercel.app/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open ENT Scribe",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
